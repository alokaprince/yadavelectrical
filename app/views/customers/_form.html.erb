<% sum=0 %>
<% paid=0 %>
<% balance=0 %>
<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name,:required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :fathername %>
    <%= form.text_field :father %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address,:required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :mobileno %>
    <%= form.text_field :mobile %>
  </div>

  <div class="field">
    
    <%= form.hidden_field :total, value: sum %>
  </div>

  <div class="field">
  
    <%= form.hidden_field :recieve, value: paid %>
  </div>

  <div class="field">
   
    <%= form.hidden_field :balance, value: balance %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

